{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": 1,
        "camelcase": "off",
        "no-await-in-loop": "off",
        "no-plusplus": "off",
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-unescaped-entities": "off",
        "no-unused-vars": "off",
        "no-multi-spaces": 1,
        "no-param-reassign": "off",
        "max-len":"off"
    }
}
